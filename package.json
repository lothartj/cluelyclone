{
  "name": "cluelyclone",
  "version": "0.1.0",
  "description": "Cluely-style real-time meeting assistant overlay (Electron + React)",
  "main": "electron/main.js",
  "author": "",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite --port 5175\" \"wait-on http://localhost:5175 && cross-env VITE_DEV_SERVER_URL=http://localhost:5175 electron .\"",
    "start": "electron .",
    "build:renderer": "vite build",
    "dist": "vite build && electron-builder",
    "dist:win": "vite build && electron-builder --win nsis",
    "dist:mac": "vite build && electron-builder --mac dmg"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.cluely.clone",
    "productName": "CluelyClone",
    "files": [
      "electron/**",
      "dist/**",
      "package.json"
    ],
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "electron/assets"
    }
  }
}
